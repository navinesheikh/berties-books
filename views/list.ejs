<!DOCTYPE html>
<html>
<head>
    <title>Bertie's Book Shop</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Bertie's Book Shop</h1>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Price (Â£)</th>
            </tr>
        </thead>
        <tbody>
            <% availableBooks.forEach(function(book) { %>
                <tr>
                    <td><%= book.name %></td>
                    <td><%= book.price %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
